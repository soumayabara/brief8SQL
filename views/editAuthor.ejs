<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <h1><%= title %></h1>

    <!-- Alerts -->
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- alerts success -->
                <% if(success != ''){ %>
                <div class="alert alert-success" role="alert"> <%= success%> </div>
                <% } %>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col">
                <div class="jumbotron">
                    <a href="/apis/lists"><button type="button" class="btn btn-outline-dark">Back</button></a>
                    <br>
                    <h3>Form To <%= title %> Author</h3>
                    <form action="/apis/author/update" method="POST" enctype="application/x-www-form-urlencoded">
                        <% if (data.length > 0){%>
                        <% data.forEach((row) => {%>
                        <div class="form-group">
                            <input type="hidden" name="idAuthor" value="<%= row.id_Author %>" id="idAuthor"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="fullname">FullName</label>
                            <input type="text" name="fullname" value="<%= row.FullName %>" id="fullname"
                                class="form-control" placeholder="Enter the FullName for the Author here">
                        </div>
                        <!--  -->
                        <div class="form-group">
                            <label for="age">Age</label>
                            <input type="text" name="age" value="<%= row.Age %>" id="age" class="form-control"
                                placeholder="Ex: 33 ">
                        </div>
                        <!--  -->
                        <div class="form-group">
                            <label for="country">Country</label>
                            <input type="text" name="country" value="<%= row.Country %>" id="country"
                                class="form-control" placeholder="Select Counrty">
                        </div>
                        <!--  -->
                        <button class="btn btn-danger">Author Update + </button>
                        <% }) } %>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://kit.fontawesome.com/1b86f0e672.js" crossorigin="anonymous"></script>

</body>

</html>
