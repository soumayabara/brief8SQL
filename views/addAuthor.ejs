<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <h1><%= title %></h1>

    <!-- Alerts -->
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- alerts success -->
                <% if(success != ''){ %>
                <div class="alert alert-success" role="alert"> <%= success%> </div>
                <% } %>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col">
                <div class="jumbotron">
                    <h3>Form To Add New Author</h3>
                    <form action="/apis/author/add" method="post" enctype="application/x-www-form-urlencoded">
                        <div class="form-group">
                            <label for="fullname">FullName</label>
                            <input type="text" name="fullname" id="fullname" class="form-control"
                                placeholder="Enter the FullName for the Author here" required>
                        </div>
                        <!--  -->
                        <div class="form-group">
                            <label for="age">Age</label>
                            <input type="text" name="age" id="age" class="form-control" placeholder="Ex: 33 " required>
                        </div>
                        <!--  -->
                        <div class="form-group">
                            <label for="country">Country</label>
                            <input type="text" name="country" id="country" class="form-control"
                                placeholder="Select Counrty" required>
                        </div>
                        <!--  -->
                        <button class="btn btn-danger">Author + </button>
                        <a href="/apis/lists"><button type="button" class="btn btn-outline-dark">Back</button></a>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://kit.fontawesome.com/1b86f0e672.js" crossorigin="anonymous"></script>

</body>

</html>
