<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>

    <!-- Alerts -->
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- alerts success -->
                <!-- <% if(success != ''){ %>
                <div class="alert alert-success" role="alert"> <%= success%> </div>
                <% } %> -->
            </div>
        </div>
    </div>

    <!-- list of all the Citations -->
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="jumbotron">
                    <a href="/apis/lists"><button type="button" class="btn btn-outline-dark">Back</button></a>
                    <br>
                    <h3>List Of All The citations That exist in the database</h3>
                    <table class="table table-striped">
                        <thead>
                            <th>ID</th>
                            <th>Core</th>
                            <th>Source</th>
                            <th>Date</th>
                            <th>Author</th>
                            <th>Actions</th>
                        </thead>
                        <tbody>
                            <% if (data.length > 0){%>
                            <% data.forEach((row) => {%>
                            <tr>
                                <td><%=row.id %></td>
                                <td><%=row.Core %></td>
                                <td><%=row.Source %></td>
                                <td><%=row.Date %></td>
                                <td><%=row.id_Author %></td>
                                <td>
                                   <a href="/apis/citation/edit/<%=row.id %>"><button type="button" class="btn btn-outline-primary"><i class="fa fa-edit"></i></button></a>
                                   <a href="/apis/citation/delete/<%=row.id %>"><button type="button" class="btn btn-outline-danger"><i class="fa fa-trash"></i></button></a>
                                </td>
                            </tr>
                            <% }) } else{ %>
                            <tr>
                                <td colspan="5">No DATA was found</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://kit.fontawesome.com/1b86f0e672.js" crossorigin="anonymous"></script>

</body>

</html>
